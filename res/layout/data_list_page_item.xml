<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:minHeight="60.0dip"
    android:background="@drawable/data_list_item_bg_shape">

    <LinearLayout
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/data_list_item_brand_image"
            style="@style/layout_vertical"
            android:layout_weight="3"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            android:background="@null"
            android:src="@drawable/item_add_btn" />

        <TextView
            android:id="@+id/data_list_item_brand_name"
            style="@style/layout_vertical"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>


    <LinearLayout
        style="@style/layout_horizontal"
        android:layout_weight="2"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/data_list_item_product_image"
            style="@style/layout_vertical"
            android:layout_weight="3"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            android:background="@null"
            android:visibility="gone"
            android:src="@drawable/item_add_btn" />

        <TextView
            android:id="@+id/data_list_item_product_name"
            style="@style/layout_vertical"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/data_list_item_size"
            style="@style/layout_vertical"
            android:layout_weight="3"
            android:gravity="center"
            android:text="41" />

        <TextView
            android:id="@+id/data_list_item_note"
            style="@style/layout_vertical"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>