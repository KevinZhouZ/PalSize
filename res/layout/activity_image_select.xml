<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="50dp"
              android:paddingRight="50dp"
              android:paddingTop="100dp"
              android:paddingBottom="100dp">

	<LinearLayout
		style="@style/layout_full"
		android:orientation="vertical"
		android:background="@drawable/data_list_item_bg"
		>

		<TextView
			android:layout_height="30dip"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:text="brand"/>

		<View
			android:background="@color/theme_color"
			android:layout_width="fill_parent"
			android:layout_height="1.0dp"/>

		<LinearLayout
			style="@style/layout_vertical"
			android:layout_weight="1">

			<ImageView
                android:id="@+id/image_select_image"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
                android:padding="8dp"
				android:scaleType="fitCenter"/>

		</LinearLayout>

		<View
			android:background="@color/theme_color"
			android:layout_width="fill_parent"
			android:layout_height="1.0dp"/>

		<LinearLayout
			android:layout_height="50dip"
			android:layout_width="fill_parent"
			android:orientation="horizontal">

			<LinearLayout android:id="@+id/image_select_btn_gallery"
			              style="@style/layout_horizontal"
			              android:layout_weight="1"
			              android:orientation="vertical">
				<View
					style="@style/layout_vertical"
					android:layout_weight="1"/>

				<ImageView
					style="@style/layout_vertical"
					android:layout_weight="5"
					android:scaleType="fitCenter"
					android:src="@drawable/btn_gallery"/>

				<View
					style="@style/layout_vertical"
					android:layout_weight="1"/>
			</LinearLayout>

			<View
				android:background="@color/dialog_line_color"
				android:layout_width="1.0dip"
				android:layout_height="fill_parent"/>

			<LinearLayout android:id="@+id/image_select_btn_camera"
			              style="@style/layout_horizontal"
			              android:layout_weight="1"
			              android:orientation="vertical">

				<View
					style="@style/layout_vertical"
					android:layout_weight="1"/>

				<ImageView
					style="@style/layout_vertical"
					android:layout_weight="5"
					android:scaleType="fitCenter"
					android:src="@drawable/btn_camera"/>

				<View
					style="@style/layout_vertical"
					android:layout_weight="1"/>
			</LinearLayout>

			<LinearLayout android:id="@+id/image_select_btn_search"
			              style="@style/layout_horizontal"
			              android:layout_weight="1"
			              android:orientation="vertical">

				<View
					style="@style/layout_vertical"
					android:layout_weight="1"/>

				<ImageView
					style="@style/layout_vertical"
					android:layout_weight="5"
					android:scaleType="fitCenter"
					android:src="@drawable/btn_search"/>

				<View
					style="@style/layout_vertical"
					android:layout_weight="1"/>
			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>